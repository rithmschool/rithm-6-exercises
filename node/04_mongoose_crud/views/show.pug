extends base.pug

block title
    title #{item.name}

block content
    div(class="row mt-5 text-center")
        h1(class="m-auto") this is #{item.name}'s page

    div(class="row m-5")
        div(class="col col-6 mx-auto")
            h4 name: #{item.name}
            h4 quantity: #{item.quantity}
                span(class="text-muted m-1") (pieces / lbs. / oz. )
    
    div(class="row")
        h5(class="mx-auto")
            a(href="/") go back to the list
            span(class="mx-2") |
            a(href=`/items/${item._id}/edit`) edit this list item

    div(class="row")
        form(action=`/items/${item._id}?_method=DELETE`, method="POST" class="mx-auto my-3")
            button(type="submit", class="btn btn-warning btn-sm") delete item