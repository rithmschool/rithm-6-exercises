extends base.pug

block content
    h1 Edit Item
    
    <form action='/items/#{item.id}?_method=PATCH' method='POST'>
      <div class="form-group">
        <label>Name of the Item</label>
        <input type="text" class="form-control col-sm-3" id="itemName" name="name" value="#{item.name}">
       
      </div>
      <div class="form-group">
        <label >Price</label>
        <input type="number" class="form-control col-sm-3" id="itemPrice" name="price" value="#{item.price}">
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
      
    </form>
    <hr>

    form(action=`/items/${item.id}?_method=DELETE` method="POST")
        input(type="submit", class="btn btn-danger", value="Delete")