extends base.pug

block title
    title item list

block content
    div(class="row mt-5 text-center")
        h1(class="m-auto") search results

    if sres
        div(class="row m-5")
            div(class="col col-6 mx-auto")
                ul(class="list-group")
                for el in sres
                    li(class="list-group-item d-flex justify-content-around")
                        h4(class="mx-auto")
                            a(href=`/items/${el._id}`) #{el.name}
                        span(class="my-auto") #{el.quantity}
    else
        div(class="row")
            div(class="col col-6 my-3 mx-auto text-center")
                h4(class="mx-auto") no items mathed your search
                h4(class="mx-auto") try searching using different key words or
    
    div(class="row")
        h5(class="mx-auto")
            a(href="/") go back to the list

    