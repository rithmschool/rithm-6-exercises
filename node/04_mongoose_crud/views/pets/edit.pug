extends ../base.pug

block content
  section(class="row")
    div(class="mx-auto")
      h2 Update Your Pet Details!
  div(class="row mt-4")
      form(action=`users/${user.id}/pets/${pet.id}?_method=PATCH` method="POST" class="mx-auto")
        div(class="form-group row")
          label(for="type" class="col-sm-3 col-form-label") Type of Pet:
          div(class="col-sm-9")
            input(type="text" class="form-control" name="type" class="col-sm-12" value=`${pet.type}`)
        div(class="form-group row")
          label(for="breed" class="col-sm-3 col-form-label") Breed:
          div(class="col-sm-9")
            input(type="text" class="form-control" name="breed" class="col-sm-12" value=`${pet.breed}`)
        div(class="form-group row")
          label(for="petNames" class="col-sm-3 col-form-label") Possible Name(s):
          div(class="col-sm-9")
            input(type="text" class="form-control" name="petNames" class="col-sm-12" value=`${pet.petNames}`)
        div(class="form-group row")
          label(for="petUrl" class="col-sm-3 col-form-label") URL of the Furball:
          div(class="col-sm-9")
            input(type="url" name="petUrl" class="form-control" value=`${pet.petUrl}`)
        div(class="form-group row")
          label(for="petNotes" class="col-sm-3 col-form-label") Notes:
          div(class="col-sm-9")
            textArea(rows="4" class="form-control col-sm-12" name="petNotes" value=`${pet.petNotes}`)
        div(class="form-group row")
          div(class="col-sm-10")
            button(class="btn btn-outline-success") Update Your Item!
