extends base.pug

block content
    h1 Insert new item
    
    <form method='POST' action='/items'>
      <div class="form-group">
        <label>Name of the Item</label>
        <input type="text" class="form-control col-sm-3" id="itemName" name="name" placeholder="Enter Item">
       
      </div>
      <div class="form-group">
        <label >Price</label>
        <input type="number" class="form-control col-sm-3" id="itemPrice" name="price" placeholder="Enter Price">
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>