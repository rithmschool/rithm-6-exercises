extends base.pug

block title
    title user list

block content
    div(class="row mt-5 text-center")
        h1(class="m-auto") this is the user list

    div(class="row m-5")
        div(class="col col-6 mx-auto")
            ul(class="list-group")
            for el in users
                li(class="list-group-item d-flex justify-content-around")
                    h4(class="mx-auto")
                        a(href=`/users/${el._id}`) #{el.name}

    div(class="text-center")
        h5
            a(href="/users/new") add a new user

    div(class="row")
        form(action=`/users?_method=DELETE`, method="POST" class="mx-auto my-3")
            button(type="submit", class="btn btn-danger btn-sm") delete all users