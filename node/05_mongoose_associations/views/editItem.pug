extends base

block content
  div(class="container")
    form(action=`/user/${item.user.id}/items/${item.id}?_method=PATCH`, method="POST")
      div(class="form-group")
        label(for="") Item
          input(type="text", name="name" value=`${item.name}` class="form-control input-lg")
      div(class="form-group")
        input(type="submit" value="submit" class="btn btn-primary")
    form(action=`/user/${item.user.id}/items/${item.id}?_method=DELETE`, method="POST")
      div(class="form-group")
        input(type="submit", value="DELTE ITEM" class="btn btn-danger")
