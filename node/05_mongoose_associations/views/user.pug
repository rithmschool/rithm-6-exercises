extends base.pug

block content
  div(class="container")
    h1 #{user.firstName} #{user.lastName}

    form(action=`/user/${user._id}/edit`, method="GET")
      input(type="submit", value="EDIT USER" class="btn btn-primary")
    br
    form(action=`/user/${user._id}?_method=DELETE`, method="POST")
      input(type="submit", value="DELETE" class="btn btn-primary")
