extends base.pug

block title
    | Show User Profile

block content
    h1 Show User - ID #{user.id}
    br
    p #{user.name}
    br
    h2 Skills
    each item in items
        li
            span #{item.name}

    a(href=`/users/${user.id}/edit`) Edit User
    br

    form(action=`/users/${user.id}?_method=DELETE` method="POST" )
        input(type="submit", name="delete", value="X")

    br
    a(href="/users") Home
