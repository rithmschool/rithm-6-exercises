extends base.pug

block content

  div(class="container")
      table(class="table" style="text-align: center")
        thead
          tr
            th(scope="col") Name
            th(scope="col") Snacks
        tbody
          for user in users
            tr
              td
                a(href=`/user/${user._id}`)  #{user.firstName} #{user.lastName}

      form(action="/user/new" method="GET")
        input(type="submit" value="NewUser" class="btn btn-primary")

      br

      form(action=`/user?_method=DELETE`, method="POST")
        input(type="submit", value="DELETE ALL USERS" class="btn btn-primary")
      br

