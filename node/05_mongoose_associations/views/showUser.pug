extends base.pug

block title
    title #{user.name}

block content
    div(class="row mt-5 text-center")
        h1(class="m-auto") this is #{user.name}'s page

    div(class="row m-5")
        div(class="col col-6 mx-auto")
            h4 items:
            ul
            for el in user.items
                li(class="ml-3")
                    h4(class="mx-auto")
                        a(href=`/items/${el._id}`) #{el.name}
    
    div(class="row")
        h5(class="mx-auto")
            a(href="/users") go back to the user list
            span(class="mx-2") |
            a(href=`/users/${user._id}/edit`) edit this user or add item

    div(class="row")
        form(action=`/users/${user._id}?_method=DELETE`, method="POST" class="mx-auto my-3")
            button(type="submit", class="btn btn-warning btn-sm") delete user