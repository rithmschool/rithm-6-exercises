extends ../base.pug

block content
  h1 Information for #{user.name}
    h3 name: #{user.name}
  a(href=`/users/${user.id}/items`) See this user's items!
  br
  a(href=`/users/${user.id}/edit`) Edit this user!
  form(action=`/users/${user.id}?_method=DELETE` method="POST")
    input(type="submit" name="delete" value="delete")

  br
  a(href="/users") Back to all users
