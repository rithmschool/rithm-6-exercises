extends base.pug

block content
    h2 #{user.name}

    h3 #{user.name}'s Item List
    a(href=`${user.id}/items/new`) Add a new item for #{user.name}
    each item in items
        p #{ item.name }
        a(href=`/items/${item.id}`) See #{item.name}

    form(action=`/users/${user.id}?_method=DELETE`, method="POST")
        input(type="submit" value="X")

