extends base.pug

block content
    h2 #{user.name}

    h3 #{user.name}'s Item List
    a(href=`/items/new`) Add a new item!
    each item in user.items
        p #{ item.name }
        a(href=`/items/${item.id}`) See #{user.item }

    form(action=`/users/${user.id}?_method=DELETE`, method="POST")
        input(type="submit" value="X")

