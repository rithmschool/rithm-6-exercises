extends base.pug

block title
    | Edit User

block content
    h1 Edit User
    form(action=`/users/${user.id}?_method=PATCH` method="POST")
        br
        label Name
        input(type="text", name="name", value=`${user.name}`)
        br
        br
        input(type="submit", name="edit", value="Edit User")
        br
    br
    form(action=`/users/${user.id}?_method=DELETE` method="POST" )
        input(type="submit", name="delete", value="Delete User")
    br
    a(href="/users") Cancel

    h2 Add Items to User
    each item in addItems
      li
        span #{item.name}
        form(action=`/users/${user.id}/items?_method=PATCH` method="POST")
            input(type="text" name="item_id" value=`${item.id}` hidden=true)
            input(type="submit" value="Add Item")
        br

    h2 Remove Items from User
    each item in removeItems
      li
        span #{item.name}
        form(action=`/users/${user.id}/items?_method=DELETE` method="POST")
            input(type="text" name="item_id" value=`${item.id}` hidden=true)
            input(type="submit" value="Remove Item")
        br


