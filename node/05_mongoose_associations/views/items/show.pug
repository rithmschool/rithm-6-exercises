extends ../base.pug

block content
  h1 Information for #{item.name}
    h3 name: #{item.name}
    h3 price: $#{item.price}
  a(href=`/users/${user_id}/items/${item.id}/edit`) Edit your item!
  form(action=`/users/${user_id}/items/${item.id}?_method=DELETE` method="POST")
    input(type="submit" name="delete" value="delete")

  br
  a(href="/items") Back to all items
