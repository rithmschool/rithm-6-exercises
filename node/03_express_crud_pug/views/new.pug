extends base.pug

block content
  section(class="row")
    div(class="mx-auto")
      h2 Need to Add Item To Your Shopping List? Submit It Here!
  div(class="row mt-4")
      form(action="/items" method="POST" class="mx-auto")
        div(class="form-group row")
          label(for="item" class="col-sm-2 col-form-label") Item:
          div(class="col-sm-10")
            input(type="text" class="form-control" name="item" class="col-sm-12")
        div(class="form-group row")
          label(for="price" class="col-sm-2 col-form-label sr-only ml-2") Price:
          div(class="input-group mb-2 mx-0")
          div(class="mx-0 input-group-prepend")
            div(class="input-group-text") $
          div(class="mx-0 col-sm-10")
            input(type="text" name="price" class="form-control")
        div(class="form-group row")
          label(for="url" class="col-sm-2 col-form-label") URL:
          div(class="col-sm-10")
            input(type="url" name="url" class="form-control")
        div(class="form-group row")
          div(class="col-sm-10")
            button(class="btn btn-outline-success") Add Your Item to The List!


